@model List<Movie> 
<h1>Search Results</h1>
   <div class="container">
    <div class="row row-cols-3 g-4">
        @if (Model.Count <= 0)
        {
            <h1>NOT FOUND</h1>
        }
        else
        {
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="col">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <b>@Model[i].Name</b>
                            <div>
                                <a asp-action="Edit" asp-controller="Movie" asp-route-id="@Model[i].Id">
                                    <i class="btn btn-outline-dark">Edit</i> <!-- Edit Icon -->
                                </a>
                            </div>
                        </div>
                        <img src="/images/movies/@Model[i].ImgUrl" class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="align-bottom">Price: <span class="btn btn-outline-secondary">@Model[i].Price</span></p>
                            <p class="card-text">Cinema: @Model[i].Cinema.Name</p>
                            <p class="card-text">Star Date: @Model[i].StartDate</p>
                            <p class="card-text">End Date: @Model[i].EndDate</p>
                            <p>Category: <a asp-action="GetMovies" asp-controller="Category" asp-route-id="@Model[i].CategoryId"> <span class="btn btn-outline-primary">@Model[i].Category.Name </span></a></p>
                            <p>Status: <span class="btn alert-primary">@Model[i].MovieStatus</span> </p>
                            <a asp-action="ShowDetalis" asp-controller="Movie" asp-route-id="@Model[i].Id" class="btn btn-secondary">More Details</a>
                            <a asp-action="BookTicket" asp-controller="Movie" asp-route-id="@Model[i].Id" class="btn btn-success">Book Ticket</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

