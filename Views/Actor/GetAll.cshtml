@using Movie_Point.ViewModel
@model List<Actor>

@{
    ViewData["Title"] = "GetAll";
}

<h1>GetAll</h1>
@foreach(Actor actor in Model)
{
    <div>
        <h1>@actor.FirstName @actor.LastName</h1>
        <img src="/images/cast/@actor.ProfilePicture" class="rounded-circle img-fluid mb-3" alt="Profile Picture" style="width: 200px; height: 200px;">
        <h1>@actor.Bio</h1>
        <a asp-action="Delete" asp-controller="Actor" class="btn btn-danger" asp-route-id="@actor.Id">Delete Actor</a>
        <a asp-action="Edit" asp-controller="Actor" class="btn btn-danger" asp-route-id="@actor.Id">Edit Actor</a>
    </div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
