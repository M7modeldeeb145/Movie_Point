<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie_Point</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Movie_Point.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="/images/logo.png" width="70" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Movie Point</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Movie" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cinema" asp-action="Index">Cinemas</a>
                        </li>
                        <!-- Dropdown Menu -->
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="dropdown">
                                <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Actions
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" asp-action="Create" asp-controller="Movie">Create New Film</a></li>
                                    <li><a class="dropdown-item" asp-action="Create" asp-controller="Category">Create New Category</a></li>
                                    <li><a class="dropdown-item" asp-action="Create" asp-controller="Role">Create New Role</a></li>
                                </ul>
                            </div>
                        }
                        <!-- End Dropdown Menu -->
                    </ul>

                    <div class="d-flex">
                        <form method="get" asp-action="Search" asp-controller="Movie" class="d-flex">
                            <input name="name" class="form-control me-2 flex-grow-1" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-success" type="submit">Search</button>
                        </form>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link text-dark" asp-action="Logout" asp-controller="Account" role="button">
                                <i class="bi bi-box-arrow-in-right"></i> LogOut
                            </a>
                            <a class="nav-link text-dark" asp-action="" asp-controller="" role="button">
                                <i class="bi bi-box-arrow-in-right"></i> Welcome @User.Identity.Name
                            </a>
                        }
                        else
                        {
                            <a class="nav-link text-dark" asp-action="Registeration" asp-controller="Account" role="button">
                                <i class="bi bi-person-plus-fill"></i> Register
                            </a>
                            <a class="nav-link text-dark" asp-action="Login" asp-controller="Account" role="button">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-primary">
        <div class="container">
            &copy; 2024 - Movie_Point - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
