@using Movie_Point.ViewModel
@model CategoryViewModel
<h1>Create New Category</h1>
<form asp-action="SaveNew" asp-controller="Category">

	<label asp-for= "Name">Category Name</label>
	<input asp-for="Name" placeholder="Enter The New Categoey Name" class="form-control" />
	<span asp-validation-for="Name"></span>
	<br />

	<div>
	<button type="submit" class="btn btn-primary">Add Category</button>
	<a asp-action="Index" asp-controller="Movie" class="btn btn-secondary">Cancel</a>
</form>